{
  "openapi": "3.0.0",
  "info": {
    "title": "Asistencia API",
    "version": "1.0.1"
  },
  "tags": [
    {
      "name": "Asistencia",
      "description": "Operaciones CRUD para la gestión de la Asistencia de estudiantes"
    }
  ],
  "paths": {
    "/api/asistencia/graficos/asistencia-mensual": {
      "get": {
        "tags": ["Asistencia"],
        "summary": "Obtener gráfico de asistencia mensual",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Datos de asistencia mensual generados exitosamente" }
        }
      }
    },
    "/api/asistencia": {
      "get": {
        "tags": ["Asistencia"],
        "summary": "Listar todas las asistencias",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de asistencias obtenida exitosamente" }
        }
      },
      "post": {
        "tags": ["Asistencia"],
        "summary": "Registrar nueva asistencia",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Asistencia" }
            }
          }
        },
        "responses": {
          "201": { "description": "Asistencia registrada exitosamente" }
        }
      }
    },
    "/api/asistencia/{id}": {
      "get": {
        "tags": ["Asistencia"],
        "summary": "Obtener asistencia por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Asistencia encontrada" },
          "404": { "description": "Asistencia no encontrada" }
        }
      },
      "put": {
        "tags": ["Asistencia"],
        "summary": "Actualizar asistencia existente",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Asistencia" }
            }
          }
        },
        "responses": {
          "200": { "description": "Asistencia actualizada exitosamente" },
          "404": { "description": "Asistencia no encontrada" }
        }
      },
      "delete": {
        "tags": ["Asistencia"],
        "summary": "Eliminar asistencia por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Asistencia eliminada exitosamente" },
          "404": { "description": "Asistencia no encontrada" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Asistencia": {
        "type": "object",
        "properties": {
          "fecha": { "type": "string", "format": "date", "example": "2025-05-11" },
          "estudianteId": { "type": "integer", "example": 1 },
          "estado": { "type": "string", "enum": ["Presente", "Ausente", "Justificado"], "example": "Presente" },
          "observaciones": { "type": "string", "example": "Llegó 10 minutos tarde" }
        },
        "required": ["fecha", "estudianteId", "estado"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
