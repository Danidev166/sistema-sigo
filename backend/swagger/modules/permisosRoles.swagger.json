{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Permisos por Roles",
    "description": "Endpoints para gestionar los permisos asignados a roles.",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:3001/api", "description": "Servidor de desarrollo" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "PermisoRol": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "ID único" },
          "rol": { "type": "string", "description": "Nombre del rol" },
          "modulo": { "type": "string", "description": "Módulo del sistema" },
          "accion": { "type": "string", "description": "Acción permitida" },
          "permitido": { "type": "boolean", "description": "¿Está permitido?" },
          "fecha_creacion": { "type": "string", "format": "date-time", "description": "Fecha de creación" }
        },
        "required": ["rol", "modulo", "accion"]
      },
      "PermisoRolResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "permiso": { "$ref": "#/components/schemas/PermisoRol" }
        }
      },
      "Error": {
        "type": "object",
        "properties": { "error": { "type": "string" } }
      }
    }
  },
  "paths": {
    "/permisos-roles": {
      "get": {
        "tags": ["Permisos por Roles"],
        "summary": "Obtener todos los permisos por roles",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de permisos", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/PermisoRol" } } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Error interno", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "post": {
        "tags": ["Permisos por Roles"],
        "summary": "Crear permiso por rol",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PermisoRol" } } }
        },
        "responses": {
          "201": { "description": "Creado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PermisoRolResponse" } } } },
          "400": { "description": "Datos inválidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/permisos-roles/{id}": {
      "get": {
        "tags": ["Permisos por Roles"],
        "summary": "Obtener permiso por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Permiso encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PermisoRol" } } } },
          "404": { "description": "No encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "put": {
        "tags": ["Permisos por Roles"],
        "summary": "Actualizar permiso por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PermisoRol" } } }
        },
        "responses": {
          "200": { "description": "Actualizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PermisoRolResponse" } } } },
          "400": { "description": "Datos inválidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "delete": {
        "tags": ["Permisos por Roles"],
        "summary": "Eliminar permiso por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Eliminado", "content": { "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" } } } } } },
          "404": { "description": "No encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    }
  },
  "tags": [
    { "name": "Permisos por Roles", "description": "Operaciones sobre los permisos asignados a roles" }
  ]
} 