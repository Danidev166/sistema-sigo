{
  "openapi": "3.0.0",
  "info": {
    "title": "Comunicación Familia API",
    "version": "1.0.1"
  },
  "tags": [
    {
      "name": "Comunicación Familia",
      "description": "Operaciones CRUD para la gestión de las comunicaciones con la familia"
    }
  ],
  "paths": {
    "/api/comunicacion-familia": {
      "get": {
        "tags": ["Comunicación Familia"],
        "summary": "Listar comunicaciones con familia",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de comunicaciones obtenida exitosamente" }
        }
      },
      "post": {
        "tags": ["Comunicación Familia"],
        "summary": "Registrar nueva comunicación",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ComunicacionFamilia" }
            }
          }
        },
        "responses": {
          "201": { "description": "Comunicación registrada exitosamente" }
        }
      }
    },
    "/api/comunicacion-familia/{id}": {
      "get": {
        "tags": ["Comunicación Familia"],
        "summary": "Obtener comunicación por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Comunicación encontrada" },
          "404": { "description": "Comunicación no encontrada" }
        }
      },
      "put": {
        "tags": ["Comunicación Familia"],
        "summary": "Actualizar comunicación existente",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ComunicacionFamilia" }
            }
          }
        },
        "responses": {
          "200": { "description": "Comunicación actualizada exitosamente" },
          "404": { "description": "Comunicación no encontrada" }
        }
      },
      "delete": {
        "tags": ["Comunicación Familia"],
        "summary": "Eliminar comunicación por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Comunicación eliminada exitosamente" },
          "404": { "description": "Comunicación no encontrada" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ComunicacionFamilia": {
        "type": "object",
        "properties": {
          "fecha": { "type": "string", "format": "date", "example": "2025-05-11" },
          "estudianteId": { "type": "integer", "example": 1 },
          "tipo": { "type": "string", "example": "Reunión" },
          "detalle": { "type": "string", "example": "Se abordaron temas de comportamiento" },
          "responsable": { "type": "string", "example": "Orientadora" }
        },
        "required": ["fecha", "estudianteId", "tipo", "detalle"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
