{
  "openapi": "3.0.0",
  "info": {
    "title": "Alertas API",
    "version": "1.0.1"
  },
  "tags": [
    {
      "name": "Alertas",
      "description": "Operaciones para la gestión de alertas automáticas"
    }
  ],
  "paths": {
    "/api/alertas/generar": {
      "post": {
        "tags": ["Alertas"],
        "summary": "Generar alertas automáticas",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Alertas generadas correctamente." }
        }
      }
    },
    "/api/alertas": {
      "get": {
        "tags": ["Alertas"],
        "summary": "Listar todas las alertas",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de alertas" }
        }
      }
    },
    "/api/alertas/{id}/estado": {
      "patch": {
        "tags": ["Alertas"],
        "summary": "Cambiar estado de una alerta",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "estado": { "type": "string", "example": "resuelta" }
                },
                "required": ["estado"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Estado de alerta actualizado." }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
