{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Logs de Actividad",
    "description": "Endpoints para gestionar los logs de actividad del sistema.",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:3001/api", "description": "Servidor de desarrollo" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "LogsActividad": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "description": "ID único" },
          "id_usuario": { "type": "integer", "description": "ID del usuario" },
          "accion": { "type": "string", "description": "Acción realizada" },
          "tabla_afectada": { "type": "string", "description": "Tabla afectada" },
          "id_registro": { "type": "integer", "description": "ID del registro afectado" },
          "datos_anteriores": { "type": "string", "description": "Datos anteriores" },
          "datos_nuevos": { "type": "string", "description": "Datos nuevos" },
          "ip_address": { "type": "string", "description": "Dirección IP" },
          "user_agent": { "type": "string", "description": "User Agent" },
          "fecha_accion": { "type": "string", "format": "date-time", "description": "Fecha de la acción" }
        },
        "required": ["accion"]
      },
      "LogsActividadResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "log": { "$ref": "#/components/schemas/LogsActividad" }
        }
      },
      "Error": {
        "type": "object",
        "properties": { "error": { "type": "string" } }
      }
    }
  },
  "paths": {
    "/logs-actividad": {
      "get": {
        "tags": ["Logs de Actividad"],
        "summary": "Obtener todos los logs de actividad",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de logs", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/LogsActividad" } } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "500": { "description": "Error interno", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "post": {
        "tags": ["Logs de Actividad"],
        "summary": "Crear log de actividad",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LogsActividad" } } }
        },
        "responses": {
          "201": { "description": "Creado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LogsActividadResponse" } } } },
          "400": { "description": "Datos inválidos", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/logs-actividad/{id}": {
      "get": {
        "tags": ["Logs de Actividad"],
        "summary": "Obtener log por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Log encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LogsActividad" } } } },
          "404": { "description": "No encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "delete": {
        "tags": ["Logs de Actividad"],
        "summary": "Eliminar log por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Eliminado", "content": { "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" } } } } } },
          "404": { "description": "No encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "No autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    }
  },
  "tags": [
    { "name": "Logs de Actividad", "description": "Operaciones sobre los logs de actividad del sistema" }
  ]
} 