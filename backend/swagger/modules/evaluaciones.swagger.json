{
  "openapi": "3.0.0",
  "info": {
    "title": "Evaluaciones API",
    "version": "1.0.1"
  },
  "tags": [
    {
      "name": "Evaluaciones",
      "description": "Operaciones CRUD para la gestión de evaluaciones de estudiantes"
    }
  ],
  "paths": {
    "/api/evaluaciones": {
      "get": {
        "tags": ["Evaluaciones"],
        "summary": "Listar todas las evaluaciones",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de evaluaciones obtenida exitosamente" }
        }
      },
      "post": {
        "tags": ["Evaluaciones"],
        "summary": "Registrar nueva evaluación",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EvaluacionCrear" }
            }
          }
        },
        "responses": {
          "201": { "description": "Evaluación registrada exitosamente" }
        }
      }
    },
    "/api/evaluaciones/por-especialidad": {
      "get": {
        "tags": ["Evaluaciones"],
        "summary": "Obtener evaluaciones por especialidad",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Evaluaciones por especialidad obtenidas exitosamente" }
        }
      }
    },
    "/api/evaluaciones/{id}": {
      "get": {
        "tags": ["Evaluaciones"],
        "summary": "Obtener evaluación por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Evaluación encontrada" },
          "404": { "description": "Evaluación no encontrada" }
        }
      },
      "put": {
        "tags": ["Evaluaciones"],
        "summary": "Actualizar evaluación",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EvaluacionActualizar" }
            }
          }
        },
        "responses": {
          "200": { "description": "Evaluación actualizada exitosamente" },
          "404": { "description": "Evaluación no encontrada" }
        }
      },
      "delete": {
        "tags": ["Evaluaciones"],
        "summary": "Eliminar evaluación por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Evaluación eliminada exitosamente" },
          "404": { "description": "Evaluación no encontrada" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EvaluacionCrear": {
        "type": "object",
        "properties": {
          "estudianteId": { "type": "integer", "example": 1 },
          "fecha": { "type": "string", "format": "date", "example": "2025-05-11" },
          "asignatura": { "type": "string", "example": "Matemáticas" },
          "nota": { "type": "number", "format": "float", "example": 5.5 },
          "observaciones": { "type": "string", "example": "Participación destacada" }
        },
        "required": ["estudianteId", "fecha", "asignatura", "nota"]
      },
      "EvaluacionActualizar": {
        "type": "object",
        "properties": {
          "nota": { "type": "number", "format": "float", "example": 6.0 },
          "observaciones": { "type": "string", "example": "Corrección por error en calificación" }
        },
        "required": ["nota"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
