{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Agenda",
    "description": "Endpoints para gestionar la agenda de entrevistas y citas",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "Servidor de desarrollo"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Agenda": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID único de la agenda"
          },
          "id_estudiante": {
            "type": "integer",
            "description": "ID del estudiante"
          },
          "fecha": {
            "type": "string",
            "format": "date",
            "description": "Fecha de la cita"
          },
          "hora": {
            "type": "string",
            "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
            "description": "Hora de la cita en formato HH:MM"
          },
          "motivo": {
            "type": "string",
            "maxLength": 255,
            "description": "Motivo de la cita"
          },
          "profesional": {
            "type": "string",
            "maxLength": 100,
            "description": "Nombre del profesional"
          },
          "email_orientador": {
            "type": "string",
            "format": "email",
            "description": "Email del orientador (opcional)"
          },
          "creado_en": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha de creación"
          }
        },
        "required": ["id_estudiante", "fecha", "hora", "motivo", "profesional"]
      },
      "AgendaResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "agenda": {
            "$ref": "#/components/schemas/Agenda"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/agenda": {
      "get": {
        "tags": ["Agenda"],
        "summary": "Obtener todas las agendas",
        "description": "Retorna una lista de todas las agendas registradas",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de agendas obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Agenda"
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Agenda"],
        "summary": "Crear nueva agenda",
        "description": "Crea una nueva entrada en la agenda",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Agenda"
              },
              "example": {
                "id_estudiante": 1,
                "fecha": "2024-01-15",
                "hora": "14:30",
                "motivo": "Entrevista de orientación vocacional",
                "profesional": "Dr. Juan Pérez",
                "email_orientador": "orientador@instituto.edu"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Agenda creada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AgendaResponse"
                }
              }
            }
          },
          "400": {
            "description": "Datos inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/agenda/{id}": {
      "get": {
        "tags": ["Agenda"],
        "summary": "Obtener agenda por ID",
        "description": "Retorna una agenda específica por su ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la agenda",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Agenda obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Agenda"
                }
              }
            }
          },
          "404": {
            "description": "Agenda no encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Agenda"],
        "summary": "Actualizar agenda",
        "description": "Actualiza una agenda existente por su ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la agenda",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Agenda"
              },
              "example": {
                "id_estudiante": 1,
                "fecha": "2024-01-16",
                "hora": "15:00",
                "motivo": "Entrevista de seguimiento",
                "profesional": "Dr. Juan Pérez",
                "email_orientador": "orientador@instituto.edu"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Agenda actualizada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "✅ Agenda actualizada"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Datos inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "No autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Agenda no encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Agenda"],
        "summary": "Eliminar agenda",
        "description": "Elimina una agenda por su ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID de la agenda",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Agenda eliminada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "✅ Agenda eliminada"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Agenda no encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  }
} 