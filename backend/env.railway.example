# Configuración para Railway
NODE_ENV=production
PORT=3001

# Base de Datos PostgreSQL (Railway genera estas automáticamente)
PGHOST=postgres.railway.internal
PGPORT=5432
PGUSER=postgres
PGPASSWORD=auto_generated_by_railway
PGDATABASE=railway

# JWT (cambiar en producción)
JWT_SECRET=sigo_jwt_secret_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# Frontend URL (se configurará después del deploy)
FRONTEND_URL=https://tu-frontend.railway.app

# Email (opcional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=tu_email@gmail.com
MAIL_PASS=tu_app_password
