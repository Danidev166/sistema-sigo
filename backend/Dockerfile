# Dockerfile para SIGO Backend
FROM node:18-alpine

# Crear directorio de trabajo
WORKDIR /app

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm ci --only=production

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 3001

# Comando de inicio
CMD ["npm", "start"]
