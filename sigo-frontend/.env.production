# =============================================
# CONFIGURACIÓN DE PRODUCCIÓN - SIGO FRONTEND
# =============================================

# API (usar SIEMPRE https y la URL pública del App Service)
VITE_API_URL="https://<tu-app-back>.azurewebsites.net/api"
VITE_APP_NAME="SIGO"
VITE_APP_VERSION="1.0.0"

# SEGURIDAD / MONITOREO
VITE_ENABLE_ANALYTICS="true"
VITE_SENTRY_DSN="https://tu-sentry-dsn"
VITE_ENABLE_METRICS="true"
VITE_LOG_LEVEL="error"

# UI
VITE_THEME="light"                    # o "dark" según tu preferencia por defecto
VITE_PRIMARY_COLOR="#3B82F6"         # ⚠️ entre comillas por el #
VITE_SECONDARY_COLOR="#8B5CF6"       # ⚠️ entre comillas por el #

# FEATURES
VITE_ENABLE_PWA="true"
VITE_ENABLE_OFFLINE="true"
VITE_CACHE_VERSION="1.0.0"
